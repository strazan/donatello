{
    "private": true,
    "main": "main/index.js",
    "productName": "Donatello",
    "scripts": {
        "clean": "rimraf dist main renderer/out renderer/.next",
        "dev": "yarn run electron:watch",
        "app": "electron .",
        "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|jsx|ts|tsx|json)\"",
        "electron:watch": "tsc -p electron-src --watch",
        "build-renderer": "next build renderer && next export renderer",
        "build-electron": "tsc -p electron-src",
        "build": "yarn run build-renderer && yarn run build-electron",
        "pack-app": "yarn run build && electron-builder --dir",
        "dist": "yarn run build && electron-builder",
        "type-check": "tsc -p ./renderer/tsconfig.json && tsc -p ./electron-src/tsconfig.json"
    },
    "dependencies": {
        "@headlessui/react": "^1.7.4",
        "@heroicons/react": "^2.0.13",
        "chokidar": "^3.5.3",
        "classnames": "^2.3.2",
        "electron-is-dev": "^1.1.0",
        "electron-next": "^3.1.5",
        "electron-store": "^8.1.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tailwind-theme-switcher": "^1.0.2"
    },
    "devDependencies": {
        "@types/node": "^14.14.6",
        "@types/react": "^16.9.9",
        "@types/react-dom": "^16.9.9",
        "@typescript-eslint/eslint-plugin": "^5.44.0",
        "@typescript-eslint/parser": "^5.44.0",
        "autoprefixer": "^10.4.13",
        "electron": "^13",
        "electron-builder": "^23.0.3",
        "eslint": "^8.28.0",
        "next": "latest",
        "postcss": "^8.4.19",
        "prettier": "^2.8.0",
        "rimraf": "^3.0.0",
        "tailwindcss": "^3.2.4",
        "typescript": "^4.0.5"
    },
    "build": {
        "asar": true,
        "files": [
            "main",
            "renderer/out"
        ]
    }
}
